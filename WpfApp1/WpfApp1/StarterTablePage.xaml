<Page x:Class="WpfApp1.StarterTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1800"
      Title="Starter Table">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="ButtonHome" Content="Home" Click="ButtonHome_Click" Width="200" Height="50" Margin="0,0,0,10"/>
            <TextBlock Text="Starter Table Page" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,20"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Enter Ideas for Starter Table" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="StarterIdeasTextBox" AcceptsReturn="True" Height="100" Width="600" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,5,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Final Idea" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="FinalIdeaTextBox" AcceptsReturn="True" Height="100" Width="600" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,5,0,10"/>
            <Button Content="Load Final Idea" Click="LoadFinalIdea_Click" Margin="0,10,0,0" Width="150"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Transformed Idea Details" FontSize="16" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Suggested Name:" Width="150"/>
                <TextBox x:Name="SuggestedNameTextBox" IsReadOnly="True" Width="450"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="All Uppercase:" Width="150"/>
                <TextBox x:Name="UpperCaseNameTextBox" IsReadOnly="True" Width="450"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="All Lowercase:" Width="150"/>
                <TextBox x:Name="LowerCaseNameTextBox" IsReadOnly="True" Width="450"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Length in Characters:" Width="150"/>
                <TextBox x:Name="CharacterLengthTextBox" IsReadOnly="True" Width="450"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Length in Bytes:" Width="150"/>
                <TextBox x:Name="ByteLengthTextBox" IsReadOnly="True" Width="450"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="List of Words:" Width="150"/>
                <TextBox x:Name="WordsListTextBox" IsReadOnly="True" Width="450"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Number of Words:" Width="150"/>
                <TextBox x:Name="WordCountTextBox" IsReadOnly="True" Width="450"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
